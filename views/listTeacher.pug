extends layout
block variables
  include variables
block content
    br
    .container
      h1.mt-5 Список преподавателей
      br
      form(action='/addTeacher', method='post')
        div(class="form-row")
          div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
            input(name='lastname', class="form-control" type="text" placeholder='Фамилия' required)
          div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
            input(name='firstname', class="form-control" type="text" placeholder='Имя' required)
          div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
            input(name='secondname', class="form-control" type="text" placeholder='Отчество')
          div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
            input(name='code', class="form-control" type="text" placeholder='Код подтверждения')
          div(class="col")
            input(class="btn btn-success" type='submit', value='Добавить')
      br
      ul(class="list-group")
      each val in res
        li(class="list-group-item serviceList" id = val.id ) #{val.lastname} #{val.firstname} #{val.secondname}, #{val.code}
          i(class="caret fa fa-caret-down")
        div(class="slide")
          br
          a(class="btn btn-dark" href='/teacher/' + val.id role="button") Изменить
          font()=" "
          a(class="btn btn-danger" href='/delTeacher/' + val.id role="button") Удалить
          p

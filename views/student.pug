extends layout
block variables
  include variables
block content
    br
    .container
        h2="Изменение данных студента"
        br
        form(action='/student/'+val.id, method='post')
          div(class="form-row")
            div(class="col-lg-4 col-md-4 col-sm-4 col-xs-6 mb-3")
              input(name='lastname' class="form-control" type="text" value=val.lastname)
            div(class="col-lg-4 col-md-4 col-sm-4 col-xs-6 mb-3")
              input(name='firstname' class="form-control" type="text" value=val.firstname)
            div(class="col-lg-4 col-md-4 col-sm-4 col-xs-6 mb-3")
              input(name='secondname' class="form-control" type="text" value=val.secondname)
            div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
              input(name='birthyearstud', class="form-control" type="text" value=val.birthyear id="birthyearstud")
            div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
                select(type='text', name='studyGroup' class='form-control')
                    each value in studyGroups
                        if val.group===value.name
                            option(value=value.id selected='selected') #{value.name}
                        else
                            option(value=value.id) #{value.name}
            div(class="col-lg-3 col-md-3 col-sm-3 col-xs-6 mb-3")
              select(type='text', name='parent' class='form-control')
                  option
                  each value in parents
                      if val.pln === value.pln && val.pfn === value.pfn && val.psn === value.psn
                          option(value=value.id selected='selected') #{value.pln} #{value.pfn} #{value.psn}
                      else
                          option(value=value.id) #{value.pln} #{value.pfn} #{value.psn}
            div(class="col-lg-4 col-md-4 col-sm-4 col-xs-6")
              input(type='submit',class="btn btn-primary", value='Изменить')
              font()=" "
              a(class="btn btn-secondary" href='/listStudents' role="button") Отмена

extends layout
block variables
    include variables
block content
    br
    .container
        h1.mt-5 Удаление семестра
        br
        form(action='/delSemester/'+val.id, method='post')
            div(class="form-row")
                div(class="col-lg-4 col-md-4 col-sm-4 col-xs-6")
                    p() #{val.start} - #{val.end} #{val.name}, #{val.week}
                div(class="col-lg-12 col-md-12 col-sm-12 col-xs-6")
                    input(class="btn btn-danger" type='submit' value='Удалить')
                    font()=" "
                    a(class="btn btn-secondary" href='/listSemesters' role="button") Отмена
